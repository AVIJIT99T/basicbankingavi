<body style="background-color: gray;">
    
    
        <div class="mt-5">
    <div class="container bg-light">
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr class="table-danger text-center fw-bold">
                        <th scope="col">SR. No.</th>
                        <th scope="col">Name</th>
                        <th scope="col">E-mail ID</th>
                        <th scope="col">Bank Balance</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each details}}
                    <tr>
                            <td class="text-center fw-bold">{{this.id}}</td>
                            <td class="text-center fw-bold">{{this.name}}</td>
                            <td class="text-center fw-bold">{{this.email}}</td>
                            <td class="text-center fw-bold">{{this.current_balance}}</td>
                             <th scope="col" class="text-center fw-bold"><a class="btn btn-danger" href="/transfer/{{this.senderid}}/{{this.id}}"> Transfer </a></th> 

                        <!-- <th scope="col"><button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#trans"> Transfer </button></th> -->
                        </tr>
                        {{/each}}
                         </tbody>             
            </table>
        </div>
    </div>
    </div>

</body>
